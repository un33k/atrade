{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngpx/api-interface": ["libs/api-interface/src/index.ts"],
      "@agx/utils": ["libs/ag/utils/src/index.ts"],
      "@agx/base": ["libs/ag/base/src/index.ts"],
      "@ngagx/cfg": ["libs/ng/ag/cfg/src/index.ts"],
      "@ngagx/logger": ["libs/ng/ag/logger/src/index.ts"],
      "@ngagx/jwt": ["libs/ng/ag/jwt/src/index.ts"],
      "@ngagx/i18n": ["libs/ng/ag/i18n/src/index.ts"],
      "@ngagx/unsub": ["libs/ng/ag/unsub/src/index.ts"],
      "@ngagx/menu": ["libs/ng/ag/menu/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
