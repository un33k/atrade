{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Angular",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/wb-avidtrader"
    },
    {
      "name": "Launch NestJS",
      "type": "node",
      "request": "attach",
      "port": 7777
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node NestJS Jest Unit Tests",
      "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
      "args": ["test", "${input:libName}", "--runInBand=true", "--codeCoverage=false"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "trace": "all"
    }
  ],
  "compounds": [
    {
      "name": "NestJS and Angular",
      "configurations": ["Launch NestJS", "Launch Angular"]
    }
  ]
}
